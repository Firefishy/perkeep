{ "_for-emacs": "-*- mode: js2;-*-",
	"handlerConfig": true,
	"baseURL": ["_env", "http://camlistore.org:3179"],
	"https": false,
	"auth": ["_env", "userpass:whatever:${CAMLI_PASSWORD}"],

	"prefixes": {
		"/": {
			"handler": "storage-filesystem",
			"handlerArgs": {
				"path": ["_env", "${CAMLI_ROOT}"]
			}
		},
		"/index/": {
			"handler": "storage-index",
			"handlerArgs": {
				"blobSource": "/",
				"storage": { "type": "memory" }
			}
		},
		"/share/": {
			"handler": "share",
			"handlerArgs": {
				"blobRoot": "/",
				"index": "/index/"
			}
		}
	}
}
